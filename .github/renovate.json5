{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':semanticCommitsDisabled',
    'customManagers:githubActionsVersions',
  ],
  labels: [
    'kind/enhancement',
  ],
  postUpdateOptions: [
    'gomodTidy',
  ],
  automergeStrategy: 'squash',
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '^.ci/pipeline_definitions$',
      ],
      matchStrings: [
        'image: [\'"]?(?<depName>.*?):(?<currentValue>.*?)[\'"]?\\s',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      fileMatch: [
        'Makefile$',
        '\\.mk$',
        '\\.sh$',
      ],
      matchStrings: [
        '# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s.+?_(VERSION|version) *[?:]?= *"?(?<currentValue>.+?)"?\\s',
      ],
    },
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'patch',
      ],
      automerge: true,
    },
    {
      matchDatasources: [
        'golang-version',
      ],
      rangeStrategy: 'bump',
    },
    {
      groupName: 'Update tools',
      matchFileNames: [
        'hack/tools\\.mk',
      ],
    },
    {
      matchDatasources: [
        'go',
      ],
      enabled: false,
      matchPackageNames: [
        '/k8s\\.io/.+/',
        '/sigs\\.k8s\\.io/controller-runtime/',
      ],
    },
    {
      groupName: 'dependencies',
      separateMajorMinor: true,
      separateMinorPatch: true,
      matchPackageNames: [
        'github.com/Masterminds/semver{/,}**',
        'github.com/Masterminds/sprig/v3{/,}**',
        'github.com/fatih/color{/,}**',
        'github.com/gardener/gardener{/,}**',
        'github.com/gardener/gardener-extension-provider-openstack{/,}**',
        'github.com/gardener/machine-controller-manager{/,}**',
        'github.com/golang/mock{/,}**',
        'github.com/google/uuid{/,}**',
        'github.com/mitchellh/go-homedir{/,}**',
        'github.com/onsi/ginkgo/v2{/,}**',
        'github.com/onsi/gomega{/,}**',
        'github.com/spf13/cobra{/,}**',
        'github.com/spf13/pflag{/,}**',
        'github.com/spf13/viper{/,}**',
        'golang.org/x/crypto{/,}**',
        'sigs.k8s.io/yaml{/,}**',
      ],
    },
    {
      groupName: 'github-actions',
      matchManagers: [
        'github-actions',
      ],
    },
    {
      matchManagers: [
        'gomod',
      ],
      matchUpdateTypes: [
        'patch',
      ],
      enabled: false,
      matchPackageNames: [
        '/go/',
      ],
    },
  ],
}
